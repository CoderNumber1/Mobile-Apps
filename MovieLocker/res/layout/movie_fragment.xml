          android:id="@+id/imgMoviePhoto"
          android:layout_width="400dp"
          android:layout_height="550dp"
          android:layout_gravity="center_horizontal"
          android:background="@android:color/darker_gray"
          android:scaleType="fitCenter"/>"

<!-- 	</LinearLayout> -->
	</LinearLayout>
</ScrollView>  
